{
    "compilerOptions": {
        "baseUrl": "src/",
        "paths": {
            "@components/*": ["components/*"],
            "@hooks/*": ["hooks/*"],
            "@schemas/*": ["schemas/*"],
            "@constants/*": ["constants/*"],
            "@contexts/*": ["contexts/*"],
            "@lib/*": ["lib/*"],
            "@interfaces/*": ["interfaces/*"],
            "@theme/*": ["theme/*"]
        },
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "public/locales/en/login.json",
        "public/locales/es/login.json"
    ],
    "exclude": ["node_modules"]
}
